#:import MeshLinePlot kivy.garden.graph.MeshLinePlot
#:import WindowManager gui
#:import StartScreen gui
#:import SpectrumScreen gui
#:import TuneScreen gui

WindowManager:
    TuneScreen:
    StartScreen:
    SpectrumScreen:

<StartScreen>:
    name: '_startscreen_'
    GridLayout:
        cols: 1
        size: root.width-4, root.height-4
        pos: 2,2

        Label:
            id: startscreen
            text: "Willkommen beim BagPypeTuner"

        GridLayout:
            cols:2

            Label:
                text: "Blablubb"

            Button:
                text:"Start Tuning"

<TunerLineImage@Image>:
    width: 40
    size_hint_x: None

<TunerLineGraph@Graph>:
    plot: MeshLinePlot
    ymin: -1
    ymax: 1

<TuneScreen>:
    name: '_tunescreen_'
    GridLayout:
        cols: 2
        size: root.width-4, root.height-4
        pos: 2,2

        TunerLineImage:
            source: '../legacy/PipeTuner/Bitmaps/Scottish/32x32/10_HA.bmp'

        TunerLineGraph:
            id: graphHighA

        TunerLineImage:
            source: '../legacy/PipeTuner/Bitmaps/Scottish/32x32/9_HG.bmp'

        TunerLineGraph:
            id: graphHighG

        TunerLineImage:
            source: '../legacy/PipeTuner/Bitmaps/Scottish/32x32/8_Fnatural.bmp'

        TunerLineGraph:
            id: graphF

        TunerLineImage:
            source: '../legacy/PipeTuner/Bitmaps/Scottish/32x32/7_E.bmp'

        TunerLineGraph:
            id: graphE

        TunerLineImage:
            source: '../legacy/PipeTuner/Bitmaps/Scottish/32x32/6_D.bmp'

        TunerLineGraph:
            id: graphD

        TunerLineImage:
            source: '../legacy/PipeTuner/Bitmaps/Scottish/32x32/4_Cnatural.bmp'

        TunerLineGraph:
            id: graphC

        TunerLineImage:
            source: '../legacy/PipeTuner/Bitmaps/Scottish/32x32/3_B.bmp'

        TunerLineGraph:
            id: graphB

        TunerLineImage:
            source: '../legacy/PipeTuner/Bitmaps/Scottish/32x32/2_LA.bmp'

        TunerLineGraph:
